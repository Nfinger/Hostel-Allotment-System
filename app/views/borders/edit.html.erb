<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
 <div class="panel panel-default">
		<div class="panel-heading text-center ">
			<h2 class="panel-title">ADD REST CREDENTIAL DETAILS </h2>
		</div>
          <div class="panel-body">
         	<%= form_for(@border, url: update_path(@border.id)) do |f| %>
				<div class="form-group">
           <%= f.label :rollno %>
          <%= f.text_field :roll_no, class: 'form-control',placeholder:@border.roll_no,disabled: true %>
    			
  					
			</div>
				
        <div class="form-group">
           <%= f.label :Name %>
          <%= f.text_field :name, class: 'form-control',placeholder:"Name",id:"studentname",required: true%>
    				
  					
			</div>
			<div class="form-group">
          <%= f.label :Email %>
          <%= f.email_field :email, class: 'form-control',placeholder:"enter your email",id:"studentemail",required: true %>
				
  			</div>
  			<div class="form-group">
            <%= f.label :"Student Phone no" %>
          <%= f.number_field :phone_no, class: 'form-control',placeholder:"student phone no",id:"studentphoneno",required: true %>
				</div>
			 <div class="form-group">
            <%= f.label :Parent %>
             <%= f.number_field :parent_phone_no, class: 'form-control',placeholder:"parent phone no",id:"parentphoneno",required: true %>
        </div>
         <div class="form-group">
            <%= f.label :Address %>
             <%= f.text_field :address, class: 'form-control',placeholder:"Address",id:"address",required: true %>
        </div>
  			<button type="submit" class="btn btn-default">Submit</button>
		<%end%>
  </div>
      </div>
